modules = ["python-3.11", "postgresql-16"]

[agent]
expertMode = true
integrations = ["python_openai_ai_integrations:1.0.0", "python_database:1.0.0", "stripe:2.0.0", "python_xai:1.0.0", "python_log_in_with_replit:1.0.0", "python_anthropic_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "ffmpeg-full", "freetype", "imagemagick", "imagemagickBig", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "poppler-utils", "poppler_utils", "tcl", "tk", "yt-dlp", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Echo Engine"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Video Worker"

[[workflows.workflow]]
name = "Echo Engine"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Video Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python worker.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"

[userenv]

[userenv.development]
DEV_MODE = "true"
